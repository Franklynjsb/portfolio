				<SocialIcons href="https://github.com/Franklynjsb">
					<GitHub class="size-4 md:size-6" alt="GitHub icon" />
				</SocialIcons>
				<SocialIcons href="mailto:francojq41@gmail.com">
					<Mail class="size-4 md:size-6" alt="Email icon" />
				</SocialIcons>
